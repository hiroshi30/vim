
set bg=dark
set hlsearch
set backspace=indent,eol,start
set guifont=DejaVu\ Sans:s12
set mouse=a
set ignorecase
set belloff=all
set foldmethod=indent







call plug#begin()
	Plug 'preservim/nerdtree'
	Plug 'morhetz/gruvbox'
call plug#end()

set bg=dark
set mouse=a
" let g:airline_theme='gruvbox'
colorscheme gruvbox

set nocompatible

filetype on
filetype plugin on
filetype indent on


syntax on
set number


" set cursorline
" set cursorcolumn


set shiftwidth=4
set tabstop=4
set expandtab


set nobackup

set nowrap


set incsearch
set ignorecase
set smartcase


set showcmd
set showmode
set showmatch
set hlsearch
set history=1000


set wildmenu
set wildmode=list:longest
set wildignore=*.docx


inoremap <silent> <c-s> <esc>:%w<cr>i

set clipboard=unnamed
vnoremap <c-c> yv
vnoremap <c-x> dv
vnoremap <c-v> Pv

nnoremap <c-t> :NERDTreeToggle<cr>
